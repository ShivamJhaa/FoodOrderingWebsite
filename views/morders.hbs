    <div class="" style=" width:80%;height:fit-content; margin:120px auto;padding: 12px; background-color:bisque">
     
        <h3 class="title">Order Details</h3>
            
        
           
            
      
           
                <table class="table" >
                  <tr>
                    <th>Id</th>
                    <th>Customer Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Total</th>
                    <th>Status</th>
                  </tr>
                  {{#if data}}
    {{#each data}}
                  <tr >
                    <td>{{this.id}}</td>
                    <td>{{this.cid}}</td>
                    <td>{{this.cphone}}</td>
                    <td>{{this.caddress}}</td>
                    <td>{{this.title}}</td>
                    <td>&#8377;{{this.price}}</td>
                    <td>{{this.qty}}</td>
                    <td>&#8377;{{this.total}}</td>
                    <form action="/updateOrders" method="post">
                    <td>
                    <input hidden type="text" name="id" value="{{this.id}}">
                    <select name="status"class="form-control form-control-sm" >
                    {{#select this.status}}
                    <option value="ordered">Ordered</option>
                    <option value="on delivery">On Delivery</option>
                    <option value="delivered">Delivered</option>
                    <option value="cancelled">Cancelled</option>
                    {{/select}}
                    </select>
                        
                    </td>
                    <td>

                    <button type="submit" class="btn btn-primary mb-2"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-double-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M3.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L9.293 8 3.646 2.354a.5.5 0 0 1 0-.708z"/>
                    <path fill-rule="evenodd" d="M7.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L13.293 8 7.646 2.354a.5.5 0 0 1 0-.708z"/>
                    </svg></button>
                    </td>
                  </tr>
                    </form>
{{/each}}
    {{/if}}
                </table>
  
                
                
    
           <br>
             
    </div>


